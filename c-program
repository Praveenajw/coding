LEAP YEAR
...............................................

#include <stdio.h>

int main()
{
    int year;
    printf("Enter year");
    scanf("%d",&year);
    if(year%4==0)
    {
       printf("leap year%d",year);
    }
    else 
    {
       printf("non leap year%d",year);
    }
    return 0;
}
