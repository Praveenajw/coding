CONCATINATION
.............................................
#include <stdio.h>

int main()
{
    char str[15], con[15];
    int i=0,j=0;
    printf("enter:\n");
    scanf("%s",str);
    printf("enter:");
    scanf("%s",con);
    while(str[i]!='\0')
    i++;
    while(str[j]!='\0') {
   
        str[i]=con[j];
        i++;
        j++;
    }
    str[i]='\0';
    printf("concatination word: %s",str);
    return 0;
}
