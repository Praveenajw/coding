COPY STRING
.............................................


#include <stdio.h>

int main()
{
    char str[100], copystr[100];
    int i=0;
    printf("enter:");
    scanf("%s",str);
    while(str[i]!='\0')
    {
        copystr[i]=str[i];
        i++;
    }
   copystr[i]='\0';
   printf("copy word:%s",copystr);
   return 0;
}
